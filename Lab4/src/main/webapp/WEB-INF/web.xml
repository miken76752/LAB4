<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <servlet>
    <servlet-name>StudentAddServlet</servlet-name>
    <servlet-class>sumdu.edu.ua.webstudent.StudentAddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StudentAddServlet</servlet-name>
    <url-pattern>/studentAdd</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>student.jsp</welcome-file>
  </welcome-file-list>

  <context-param>
    <param-name>db_url</param-name>
    <param-value>jdbc:postgresql://localhost:5432/studentsdb</param-value>
  </context-param>
  <context-param>
    <param-name>db_user</param-name>
    <param-value>student_in12_09</param-value>
  </context-param>
  <context-param>
    <param-name>db_password</param-name>
    <param-value>student</param-value>
  </context-param>


</web-app>